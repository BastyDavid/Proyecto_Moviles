<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="18dp"
    android:layout_height="match_parent"
    android:background="@drawable/logouv"
    tools:context="com.example.basty.moviles_proyect.parte_interfaces.CreacionActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@android:color/transparent"
                android:hint="Titulo de la tarea"
                android:inputType="text"
                android:maxLength="16"
                android:maxLines="1"
                android:textStyle="bold"
                android:theme="@style/Base.AlertDialog.AppCompat.Light"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:gravity="start"
                android:hint="Contenido de la tarea"
                android:textAlignment="textStart"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </ScrollView>


</RelativeLayout>