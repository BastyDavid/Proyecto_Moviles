<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"

    package="com.example.basty.moviles_proyect">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Proyecto_Moviles :3"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light"
        >

        <activity android:name=".parte_interfaces.MainActivity"
            android:theme="@style/NoActionBarTheme">

        </activity>

        <activity android:name=".parte_interfaces.PantallaDeCarga">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".parte_interfaces.CreacionActivity"
            android:parentActivityName=".parte_interfaces.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".parte_interfaces.MainActivity" />
        </activity>
        <activity
            android:name=".parte_interfaces.MostrarTareasActivity">
        </activity>
        <activity
            android:name=".parte_interfaces.AcerdaDeActivity"
            android:parentActivityName=".parte_interfaces.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".parte_interfaces.MainActivity" />
        </activity>

    </application>

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

</manifest>
